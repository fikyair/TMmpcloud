<!--miniprogram/pages/editTasks/editTasks.wxml-->
<view class='cu-card case bg-white margin padding'>
<text class='icon-more justify-end flex' bindtap='moreOper'></text>

    <view class="cu-bar bg-white solid-bottom">
        <view class="cu-bar justify-center bg-white">
            <view class='action sub-title'>
                <text class='text-m text-bold text-cyan'>任务名称</text>
                <text class='bg-cyan' style='width:2rem'></text>
            </view>
        </view>
    </view>
    <view class="cu-form-group">
        <input placeholder="" class='radius' name='input' value="react"></input>
    </view>
    <view class="cu-bar bg-white solid-bottom">
        <view class="cu-bar justify-center bg-white">
            <view class='action sub-title'>
                <text class='text-m text-bold text-cyan'>截止时间</text>
                <text class='bg-cyan' style='width:2rem'></text>
            </view>
        </view>
    </view>
    <view class="cu-form-group">
        <input placeholder="" class='radius' name='input' value="2019-09-01"></input>
    </view>
</view>

<view class='margin'>
	<Text class='icon-titles text-green'/>
	<Text class='text-m text-bold'>
        子任务列表
    </Text>
</view>

<!-- 子任务-->
<view class="cu-list menu margin-top card-menu">
        <view class="cu-item arrow">
          <navigator class='content' url='../sonTasks/sonTasks' open-type="redirect">
            <text class='icon-form text-cyan'></text>
            <text class='text-grey'>完成文档撰写</text>
          </navigator>
        </view>

        <view class="cu-item arrow">
          <navigator class='content' url='../sonTasks/sonTasks' open-type="redirect">
            <text class='icon-form text-cyan'></text>
            <text class='text-grey'>上传实战代码</text>
          </navigator>
        </view>
</view>

<view class="foot flex flex-direction" style="bottom: 0; position: fixed; z-index: 1024; width: 100%;">
  <button class='cu-btn bg-grey lg'  bindtap='finishEditTasks'>完成</button>
</view>